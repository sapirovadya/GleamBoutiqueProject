    <script>
        function goBack() {
            window.history.back();
        }</script>

    <script>
        function validateForm() {
            var inputs = document.querySelectorAll('input[type="text"]');
            var isValid = true;

            inputs.forEach(function (input) {
                var value = input.value.trim();

                if (isNaN(value) || value < 0) {
                    alert('Input must contain only numbers greater than or equal to 0');
                    isValid = false;
                }
            });

            return isValid;
        }</script>



