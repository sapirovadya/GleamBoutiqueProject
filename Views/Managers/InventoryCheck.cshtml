    <form method="post" asp-action="UpdateAmount" onsubmit="return validateForm()">
        <div class="untree_co-section">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6 mb-5 mb-md-0">

                        <div class="p-3 p-lg-5 border bg-white">
                            @if (TempData["ErrorMessage"] != null)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @TempData["ErrorMessage"]
                                </div>}

                            <div class="form-group row">
                                <div class="col-md-9">

                                    <table>
                                        <tr>
                                            <th>Amount to order</th>
                                            <th>Catalog Number</th>
                                            <th>Product Name</th>
                                            <th>Original Price</th>
                                            <th>Amount</th>
                                            <th>Notify</th>
                                            <th>Category</th>
                                            <th>Material</th>
                                            <th>Sale Price</th>
                                            <th>Karat</th>
                                        </tr>
                                        @foreach (Product pro in Model.ProductsList)
                                        {
                                            <tr>
                                                <td><input type="text" name="selectedProducts[@pro.Pid]" value="0" size="3" /></td>
                                                <td>@pro.Pid</td>
                                                <td>@pro.PName</td>
                                                <td>@pro.OriginPrice</td>
                                                <td>@pro.Amount</td>
                                                <td>@pro.Notify_Count</td>
                                                <td>@pro.category</td>
                                                <td>@pro.Material</td>
                                                <td>@pro.Sale_price</td>
                                                <td>@pro.karat</td>
                                            </tr>
}
                                    </table>
                                    <div class="input-group-append text-center">
                                        <input class="btn btn-black btn-sm" type="submit" value="Stock order" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    </form>






