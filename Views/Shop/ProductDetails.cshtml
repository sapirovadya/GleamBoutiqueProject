                <main class="col-lg-6">
                    <div class="ps-lg-3">
                        <h4 class="title text-dark">
                            <h1>@Model.PName</h1>
                            <p></p>
                            <p></p>
                        </h4>
                        <div class="d-flex flex-row my-3">
